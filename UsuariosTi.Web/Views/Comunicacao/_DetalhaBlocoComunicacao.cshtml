@model UsuariosTi.Business.ViewModels.ViewModelComunicacao



<div class="modal fade" id="modal-destaque" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document" style="max-width: 1320px;">
        <div class="modal-content" style="height: 750px;">
            <div class="modal-header" style="background-color:#b3b3b3;color:#fff;">
                <h5 class="modal-title" id="exampleModalLongTitle">@Model.T039_DESTAQUE.T039_TITULO </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <div class="row" style="padding:0 15px;">
                    <div class="col-md-12">
                        <div class="row" style="padding:0 ">
                            <div class="col-md-10 offset-1" style="margin-bottom:12px">
                                <img src="data:image/png;base64, @Convert.ToBase64String(Model.T039_DESTAQUE.T039_IMAGEM)" style="height:400px;width:100%;" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="color: #525252;font-size: 15pt;">
                                @Model.T039_DESTAQUE.T039_DESCRICAO
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-primary" asp-action="AlterarComunicacao" asp-route-idDestaque="@Model.T039_DESTAQUE.T039_DESTAQUE_ID">Email</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
