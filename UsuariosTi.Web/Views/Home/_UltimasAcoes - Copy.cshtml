<section class="section-bg UAImg">
    <div class="row" id="pag-ultimasAcoes">
        @*<div class="col-1" style="margin-left: 1250px; margin-top: 25px;">
                <div class="col-sm botaoUA">
                    <a href="" target="_blank">
                        <span style="color:#000000; border-bottom:2px solid #000000">Todas as Ações</span>
                    </a>
                </div>
            </div>*@
    </div>
    <div class="container-fluid mycontainer">


        <div class="card-deck" style="max-height: 500px; padding-left: 30px;">
            <div class="row">
                <div class="col-md-1" style="display: table-cell; vertical-align:middle;">
                    <a data-slide="prev" href="#noticias" class="carousel-controla left" style="position: relative;float:initial; color: rgba(50, 50, 50, 0.50); font-size:80px;cursor:pointer;"><i class="fas fa-angle-left"></i></a>
                </div>
                <div class="col-md-10">

                    <div class="carousel slide" id="noticias">
                        <div class="carousel-inner conteudo row">
                            @{
                                var cItem = Model.Count();
                                var valor = "active";
                                var cont = 0;
                                var qtdPagina = cItem % 3;

                            }


                            @foreach (var valorItem in Model)
                            {

                                if (cont == 0)
                                {
                                    @Html.Raw($"<div class='item {valor}'>")
                                }

                                valor = "";
                                cont++;

                                <div class="col-md-4" style="padding: 2px 1px;">
                                    <div class="card mycard">
                                        <h5 class="card-title" style="font-size:26px; border-bottom: 2px solid #000000;">@valorItem.Titulo</h5>
                                        <h5 class="card-title">@valorItem.Data</h5>
                                        <div>
                                            @if (valorItem.Video == false)
                                            {
                                                <img class="card-img-top" id="ImgUltimasAcoes" src="@valorItem.Caminho" alt="Imagem">
                                            }
                                            else
                                            {
                                                //video
                                            }
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text mydiv1">@valorItem.Resumo</p>
                                            <div class="row footer">
                                                <div class="col-md-8" style="margin-left: -6%">
                                                    <a class="btn btn-sm" onclick="fnPositivo(this);" data-id="@valorItem.ID" style="padding: 0px;">
                                                        <label class="iconStyle" id="lblPositivo_@valorItem.ID">@valorItem.Positivo</label>
                                                        <i class="fas fa-thumbs-up" style="color:#f58d15; margin-left:1px;"></i>
                                                    </a>
                                                    <a class="btn btn-sm" onclick="fnNegativo(this);" data-id="@valorItem.ID" style="padding: 0px;">
                                                        <label class="iconStyle" id="lblNegativo_@valorItem.ID">@valorItem.Negativo</label>
                                                        <i class="fas fa-thumbs-down" style="color:#f58d15"></i>
                                                    </a>
                                                    <label class="iconStyle" id="lblVisualizacao_@valorItem.ID">@valorItem.Visualizacao</label><i class="far fa-eye" style="color:#f58d15"></i>

                                                    <label class="iconStyle" id="lblComentario_@valorItem.ID">@valorItem.QuantComentario</label>
                                                    <i class="fas fa-comment-alt" style="color:#f58d15"></i>

                                                </div>
                                                <div class="col-md-4">
                                                    <a class="btn btn-sm" onclick="fnVisualizacao(this);" data-id="@valorItem.ID" style="padding: 0px;" data-toggle="modal" data-target="#modalUltimasAcoes">
                                                        <span class="astyle">Saiba mais</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                if (cont == 3)
                                {
                                    qtdPagina++;
                                    cont = 0;
                                    @Html.Raw("</div>")

                                }

                                @if ((Model.Count() % 3) != 0)
                                {
                                    @Html.Raw("</div>")

                                }
                                else
                                {
                                    qtdPagina--;
                                }

                            }

                        </div>
                    </div>
                </div>


                <div class="col-md-1">
                    <a data-slide="next" href="#noticias" class="carousel-controla right" style="position: relative;float:initial; color: rgba(50, 50, 50, 0.50); font-size:80px;cursor:pointer;"><i class="fas fa-angle-right"></i></a>
                </div>
