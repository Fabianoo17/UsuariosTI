<div style="display:block;" id="divconteudoprincipal">
    <div id="divModal"></div>
    @await Html.PartialAsync("_CarrousselComMenu", Model.ModelCarrossel)
    @await Html.PartialAsync("_QuemSomos", Model.ModelQuemSomos)
