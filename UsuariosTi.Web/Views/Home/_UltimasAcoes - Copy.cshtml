<!-- Modal -->
<div class="modal fade" id="modalUltimasAcoes" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="uaTitulo">Modal title</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="row" style="border-bottom: 1px solid rgb(128 128 128);">
                        <div class="col-md-8">
                            <span id="uaData"></span>
                        </div>
                        <div class="col-md-4" style="text-align: right;">

                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-sm" onclick="fnPositivo(this);" data-id="0" style="padding: 0px;">
                                        <label class="iconStyle" id="lblPositivoSaiba">0</label>
                                        <i class="fas fa-thumbs-up" style="color:#f58d15; margin-left:1px;"></i>
                                    </a>
                                    <a class="btn btn-sm" onclick="fnNegativo(this);" data-id="0" style="padding: 0px;">
                                        <label class="iconStyle" id="lblNegativoSaiba">0</label>
                                        <i class="fas fa-thumbs-down" style="color:#f58d15"></i>
                                    </a>
                                    <label class="iconStyle" id="lblVisualizacaoSaiba">0</label><i class="far fa-eye" style="color:#f58d15"></i>

                                    <label class="iconStyle" id="lblComentarioSaiba">0</label>
                                    <i class="fas fa-comment-alt" style="color:#f58d15"></i>

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row" style="margin: 10px; padding: 10px;">
                        <img class="card-img-top" id="uaImgUltimasAcoes" src="" alt="Imagem">
                    </div>
                    <div class="row" style="text-align: justify; padding: 20px; font-family: 'futurabt-medium'; font-size: 16px; ">
                        <span id="uaTexto"></span>
                    </div>
                    <div class="row" style="border-top: 1px solid rgb(128 128 128); border-bottom: 1px solid rgb(128 128 128);">
                        <div class="col-md-8">
                            <h3>Comentários</h3>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn bg-primary" data-toggle="modal" data-target="#modalUAComentario" style="text-align: right; margin-left: 130px; margin-top:15px;">Comentar</button>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-sm" id="tableComentario">
                            <thead>
                                <tr>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                @*<button type="button" class="btn btn-primary">...</button>*@
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalUAComentario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Novo Comentário</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <form>
                        <input type="hidden" id="txtID" />
                        <textarea id="txtComentario" class="form-control" style="height: 120px; font-size: 17px;" placeholder="Digite seu comentário aqui"></textarea>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button id="btnEnviarComentario" onclick="enviarComentario();" type="button" class="btn btn-primary" data-dismiss="modal">Enviar</button>
            </div>
        </div>
    </div>
</div>

<!-- SWIPER -->
<script src="~/lib/swiper/swiper-bundle.min.js" asp-append-version="true"></script>

<script>

     var swiper = new Swiper(".mySwiper", {
        slidesPerView: 3,
        spaceBetween: 10,
        centeredSlides: true,
        loop: true,
        autoplay: {
            delay: 3000,
            disableOnInteraction: false
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });

    function fnPositivo(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        if (dID == 0) {
            dID = $("#txtID").val();
        }

        $.ajax({
            url: "/Home/ContadorLike",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblPositivo_" + dID).html(data);
            $("#lblPositivoSaiba").html(data);
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function fnNegativo(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        if (dID == 0) {
            dID = $("#txtID").val();
        }

        $.ajax({
            url: "/Home/ContadorDeslike",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblNegativo_" + dID).html(data);
            $("#lblNegativoSaiba").html(data);
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function fnVisualizacao(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        $.ajax({
            url: "/Home/ContadorVisualizacao",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblVisualizacao_" + dID).html(data.visualizacao);

            $("#txtID").val(data.id);
            $("#uaTitulo").html(data.titulo);
            $("#uaData").html("Data: " + moment(data.data).format('DD/MM/YYYY'));
            $("#uaImgUltimasAcoes").attr("src", data.caminho);
            $("#uaTexto").html(data.texto);

            //$("#lblVisualizacao_" + dID).html(data.visualizacao);

            $("#lblPositivoSaiba").html(data.positivo);
            $("#lblNegativoSaiba").html(data.negativo);
            $("#lblVisualizacaoSaiba").html(data.visualizacao);
            $("#lblComentarioSaiba").html(data.listarComentarios.length);

            var cols = "";

            if (data.listarComentarios.length == 0) {
                cols += "<tr>";
                cols += "<td colspan=5 style='text-align: center;'>Nenhum Comentário</td>";
                cols += "</tr>";
            } else {
                for (var i = 0; i < data.listarComentarios.length; i++) {

                    cols += "<tr>";
                    cols += "<td style='font-size: 14px;'>Data: " + moment(data.listarComentarios[i].data).format('DD/MM/YYYY') + "<br/>" + data.listarComentarios[i].comentarios + "</td>";
                    cols += "</tr>";
                }
            }

            $("#tableComentario tbody").empty();
            $("#tableComentario tbody").append(cols);

        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function enviarComentario() {

        var dID = $("#txtID").val();
        var dTexto = $("#txtComentario").val();

        $.ajax({
            url: "/Home/EnviarComentario",
            type: 'POST',
            data: { id: dID, texto: dTexto },
            beforeSend: function () {
                //blockUI('');
                $('#txtComentario').val('')
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblVisualizacao_" + dID).html(data);
            $("#lblComentario_" + dID).html(data.listarComentarios.length);

            $("#txtID").val(data.id);
            $("#uaTitulo").html(data.titulo);
            $("#uaData").html("Data: " + moment(data.data).format('DD/MM/YYYY'));
            $("#uaImgUltimasAcoes").attr("src", data.caminho);
            $("#uaTexto").html(data.texto);

            var cols = "";

            if (data.listarComentarios.length == 0) {
                cols += "<tr>";
                cols += "<td colspan=5 style='text-align: center;'>Nenhum Comentário</td>";
                cols += "</tr>";
            } else {
                for (var i = 0; i < data.listarComentarios.length; i++) {

                    cols += "<tr>";
                    cols += "<td style='font-size: 14px;'>Data: " + moment(data.listarComentarios[i].data).format('DD/MM/YYYY') + "<br/>" + data.listarComentarios[i].comentarios + "</td>";
                    cols += "</tr>";
                }
            }

            $("#tableComentario tbody").empty();
            $("#tableComentario tbody").append(cols);

            //$("#modalUAComentario")
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });
    }

</script>