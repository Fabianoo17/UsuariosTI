            color: black;
            text-align: center;
            box-shadow: 9px 7px 5px rgba(50, 50, 50, 0.77);
            height: 150px;
            text-align: center;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin-top: 60px;
        }

        .circulo-superior-nosso-time {
            border-radius: 50%;
            position: absolute;
            margin-top: -10%;
            width: 95px;
            height: 90px;
            background-color: gray;
        }

        .circulo-inferior-nosso-time {
            border-radius: 50%;
            position: absolute;
            margin-top: 10%;
            width: 50px;
            height: 50px;
        }
    }

</style>
<div class="modal" role="dialog" id="modalQuemSomos" style=" color:black;">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content imagemNossoTimeModal">

            <div class="modal-body">
                <div class="col-md-12" style="left: 40%">
                    <div>
                        <div class=" botao-nosso-time" style="width: 10%;">
                            <div class="circulo-superior-nosso-time">
                                @if (Model[0].T076_FOTO != null && !string.IsNullOrEmpty(Convert.ToBase64String(Model[0].T076_FOTO)))
                                {
                                    <img width="95" height="90" style="border-radius: 50%" src="data:image/png;base64, @Convert.ToBase64String(Model[0].T076_FOTO)" />
                                }

                                else
                                {
                                    <img width="95" height="90" style="border-radius: 50%" src="~/imagens/QuemSomos/usuario.png" />

                                }

                            </div>
                            <div class="col-9" style="padding-top: 20px">
                                <p>@Model[0].T076_NOME</p>
                                <p>@Model[0].T076_CARGO</p>
                            </div>

                            <div class="circulo-inferior-nosso-time" style="cursor:pointer;" onclick="window.open('@Html.Raw($"https://teams.microsoft.com/l/chat/0/0?users={Model[0].T076_MATRICULA}@corp.caixa.gov.br")')">
                                <img src="/imagens/Icones/icone teams.png" width="40" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


