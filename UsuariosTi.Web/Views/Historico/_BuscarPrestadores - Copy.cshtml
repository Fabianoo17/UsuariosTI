@model IEnumerable<UsuariosTi.Business.Entities.VW008_PRESTADORES_VITEC>
@{
    Layout = null;
}

<div class="12">
    @if (Model.Any())
    {


        <table style="font-size:12px;" class="text-center table table-striped dataTables">
            <thead class=" thead-light">
                <tr>
                    <th>NOME</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>ORGÃO EXPEDIDOR</th>
                    <th>MATRÍCULA</th>
                    <th>EMPRESA</th>
                    <th>COD. UNID. VINCULAÇÃO</th>
                    <th>USUÁRIO ATIVO</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NOME</td>
                        <td>@item.CPF</td>
                        <td>@item.RG</td>
                        <td>@item.ORGAO_EXPEDITOR</td>
                        <td>@item.MATRICULA</td>
                        <td>@item.EMPRESA</td>
                        <td>@item.SIGLA_UNIDADE/@item.CODIGO_UNIDADE_VALIDACAO</td>
                        <td>@item.USUARIO_ATIVO</td>

                    </tr>

                }


            </tbody>
        </table>

    }
    else
    {
        <p>Nenhum registro encontrado.</p>
    }
</div>

<script>

    $(document).ready(function () {
        $('.dataTables').DataTable({
            pageLength: 100,
            responsive: true,
            ordering: true,
            dom: '<"html5buttons"B>lTfgitp',
