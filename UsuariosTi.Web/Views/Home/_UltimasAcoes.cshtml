<script src="~/lib/swiper/swiper-bundle.min.js" asp-append-version="true"></script>

<script>

    $('#modalUltimasAcoes').on('hidden.bs.modal', function (e) {
        $('#uaVideoUltimasAcoes').attr('src', "");
    })

    var swiper = new Swiper(".swiperUltimasAcoes", {
        slidesPerView: 3,
        spaceBetween: 0,
        centeredSlides: false,
        loop: @Model.Count() > 2 ? true : false,
        autoplay: {
            delay: 3000,
            disableOnInteraction: false
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });

    function fnPositivo(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        if (dID == 0) {
            dID = $("#txtID").val();
        }

        $.ajax({
            url: "/Home/ContadorLike",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblPositivo_" + dID).html(data);
            $("#lblTodosPositivo_" + dID).html(data);
            $("#lblPositivoSaiba").html(data);
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function fnNegativo(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        if (dID == 0) {
            dID = $("#txtID").val();
        }

        $.ajax({
            url: "/Home/ContadorDeslike",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblNegativo_" + dID).html(data);
            $("#lblTodosNegativo_" + dID).html(data);
            $("#lblNegativoSaiba").html(data);
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function fnVisualizacao(el) {
        var $elemento = $(el),
            dID = $elemento.attr('data-id');

        $.ajax({
            url: "/Home/ContadorVisualizacao",
            type: 'POST',
            data: { id: dID },
            beforeSend: function () {
                //blockUI('');
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblVisualizacao_" + dID).html(data.visualizacao);
            $("#lblTodosVisualizacao_" + dID).html(data.visualizacao);

            $("#txtID").val(data.id);
            $("#uaTitulo").html(data.titulo);
            $("#uaData").html(moment(data.data).format('DD/MM/YYYY HH:mm'));

            if (data.video == false) {
                $("#uaImgUltimasAcoes").show();
                $(".dvVideoUltimasAcoes").hide();
                $("#uaImgUltimasAcoes").attr("src", data.caminho);
            } else {
                $("#uaImgUltimasAcoes").hide();
                $(".dvVideoUltimasAcoes").show();
                $("#uaVideoUltimasAcoes").attr("src", data.caminho);
            }

            $("#uaTexto").html(data.texto);

            //$("#lblVisualizacao_" + dID).html(data.visualizacao);

            $("#lblPositivoSaiba").html(data.positivo);
            $("#lblNegativoSaiba").html(data.negativo);
            $("#lblVisualizacaoSaiba").html(data.visualizacao);
            $("#lblComentarioSaiba").html(data.listarComentarios.length);

            var cols = "";

            if (data.listarComentarios.length == 0) {
                cols += "<tr>";
                cols += "<td colspan=5 style='text-align: center;'>Nenhum Comentário</td>";
                cols += "</tr>";
            } else {
                for (var i = 0; i < data.listarComentarios.length; i++) {

                    cols += "<tr>";
                    cols += "<td style='font-size: 14px;'>Data: " + moment(data.listarComentarios[i].data).format('DD/MM/YYYY') + "<br/>" + data.listarComentarios[i].comentarios + "</td>";
                    cols += "</tr>";
                }
            }

            $("#tableComentario tbody").empty();
            $("#tableComentario tbody").append(cols);

        }).fail(function (error) {
            //erroAjax(error, function () { });
        });

    }

    function enviarComentario() {

        var dID = $("#txtID").val();
        var dTexto = $("#txtComentario").val();

        $.ajax({
            url: "/Home/EnviarComentario",
            type: 'POST',
            data: { id: dID, texto: dTexto },
            beforeSend: function () {
                //blockUI('');
                $('#txtComentario').val('')
            }
        }).done(function (data) {
            //console.log(data);
            $("#lblVisualizacao_" + dID).html(data);
            $("#lblComentario_" + dID).html(data.listarComentarios.length);
            $("#lblTodosComentario_" + dID).html(data.listarComentarios.length);
            $("#lblComentarioSaiba").html(data.listarComentarios.length);

            $("#txtID").val(data.id);
            $("#uaTitulo").html(data.titulo);
            $("#uaData").html("Data: " + moment(data.data).format('DD/MM/YYYY'));
            $("#uaImgUltimasAcoes").attr("src", data.caminho);
            $("#uaTexto").html(data.texto);

            var cols = "";

            if (data.listarComentarios.length == 0) {
                cols += "<tr>";
                cols += "<td colspan=5 style='text-align: center;'>Nenhum Comentário</td>";
                cols += "</tr>";
            } else {
                for (var i = 0; i < data.listarComentarios.length; i++) {

                    cols += "<tr>";
                    cols += "<td style='font-size: 14px;'>Data: " + moment(data.listarComentarios[i].data).format('DD/MM/YYYY') + "<br/>" + data.listarComentarios[i].comentarios + "</td>";
                    cols += "</tr>";
                }
            }

            $("#tableComentario tbody").empty();
            $("#tableComentario tbody").append(cols);

            //$("#modalUAComentario")
        }).fail(function (error) {
            //erroAjax(error, function () { });
        });
    }

